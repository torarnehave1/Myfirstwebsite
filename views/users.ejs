<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <style>
    .usrtabl, .usrtabl-header {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .usrtabl p, .usrtabl-header p {
      margin: 0;
      font-weight: bold; /* Makes header text bold */
    }
    .usrtabl-header {
      margin-bottom: 10px; /* Adds space between the header and user entries */
    }
  </style>
</head>
<body>
  <h1>Users</h1>
  <div class="usrtabl-header">
    <p>Username</p>
    <p>Email</p>
    <p>Password</p>
  </div>
  <% users.forEach(user => { %>
    <div class="usrtabl">
      <p><%= user.username %></p>
      <p><%= user.email %></p>
      <p><%= user.password %></p>
    </div>
  <% }); %>
</body>
</html>
